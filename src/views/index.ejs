<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
      <a href="/upload-file">Upload file</a>
    </div>
    <div>
      <h1>List Users:</h1>
      <%= test %>
      <table>
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0 ; i < dataUser.length ; i++) { %>
          <tr>
            <td><%= dataUser[i].firstName %></td>
            <td><%= dataUser[i].lastName %></td>
            <td><%= dataUser[i].email %></td>
            <td><%= dataUser[i].address %></td>
            <td>
              <a href="/user/detail/<%= dataUser[i].id %>">
                <button type="button">Detail</button>
              </a>
              <form action="/edit-user/<%= dataUser[i].id %>" method="get">
                <button type="submit">Edit</button>
              </form>
        
              <form action="/delete-user" method="post">
                <input type="text" hidden value="<%= dataUser[i].id %>" name="userId">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
          <%} %>
        </tbody>
      </table>
    </div>
    <form class="create-user-container" action="/create-user" method="post">
      <b>Create a new user:</b>
      <div>
        <label>First Name:</label>
        <input type="text" name="firstName" />
      </div>
      <div>
        <label>Last Name:</label>
        <input type="text" name="lastName" />
      </div>
      <div>
        <label>Email:</label>
        <input type="email" name="email" />
      </div>
      <div>
        <label>Address:</label>
        <input type="text" name="address" />
      </div>
      <div class="btn-submit">
        <button type="submit">Submit</button>
      </div>
    </form>
  </body>
</html>
